@model TeCreemos.Models.DB.Movimientos

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> tipoMovimiento = (List<SelectListItem>)ViewBag.tipoMovimiento;
    int idCta = ViewBag.idCuenta;
}

@section Scripts{
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script scr="~/lib\jquery\dist\jquery.js"></script>
    <script scr="~/lib/bootstrap/dist/js/bootstrap.js"></script>
}
<style type="text/css">
    body {
        width: 75%;
        margin: auto;
        padding-top: 0%;
    }
</style>
<div class="row">
    <div class="col-md-3 ConteControl">
        <h1>Alta Movimiento</h1>
    </div>
</div>
<br />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4 ConteControl">
            <label>TIPO MOVIMIENTO:</label>
            @Html.DropDownList("tipoMovimiento", tipoMovimiento, "Favor de establecer Tipo de Movimiento", new { @class =
            "form-control", @required = "required" })
        </div>
        <div class="col-md-4 ConteControl">
            <label>REFERENCIA:</label>
            <input asp-for="Referencia" class="form-control" required />
            <span class="field-validation-valid text-danger" asp-validation-for="Referencia"
                style="visibility:collapse"></span>
        </div>
        <div class="col-md-4 ConteControl">
            <label>FECHA MOVIMIENTO:</label>
            <input asp-for="FechaMovimiento" class="form-control" required />
            <span class="field-validation-valid text-danger" asp-validation-for="FechaMovimiento"
                style="visibility:collapse"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 ConteControl">
            <label>IMPORTE:</label>

            <input type="number" asp-for="Importe" class="form-control" required />
            <span class="field-validation-valid text-danger" asp-validation-for="Importe"
                style="visibility:collapse"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="hidden" name="IdUsuarioAlta" id="IdUsuarioAlta" value="1" class="form-control" />
        <input type="hidden" asp-for="IdCuenta" value="@idCta" class="form-control" asp-items="ViewBag.IdCuenta" />
    </div>
    <br />
    <div class="row">
        <div class="col-md-2 ConteControl">
            @Html.ActionLink("Regresar", "Index", null, null, new { @type = "button", @class = "btn btn-danger pull-right" })
        </div>
        <div class="col-md-2 ConteControl">
            <input type="submit" value="Aplicar" class="btn btn-success" />
        </div>
    </div>
</form>

